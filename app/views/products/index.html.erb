<div class="modal-content">
  <div class="modal-header">
    <h4 class="modal-title">Products</h4>
  </div>
  <div class="modal-body">
    <table id="products" class="display" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
        <th>Total</th>
        
        <%# <th>Last Modified</th>
        <th>Date Added</th> %>
        <th>Actions</th>
      </tr>
      </thead>
      <%# <tfoot>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
        <th>Last Modified</th>
        <th>Date Added</th>
        <th>Actions</th>
      </tr>
      </tfoot> %>
      <tbody>
       <% running_total = 0 %>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= product.quantity %></td>
            <td><%= truncate(product.description, :length => 75) %></td>
            <td><%= number_to_currency(product.price * product.quantity )%></td>
            
            <!--<td><%= product.updated_at %></td>
            <td><%= product.created_at %></td>-->
            <td>
              <div class="btn-group">
                <%= link_to 'Show', product_path(product), class: 'btn btn-primary' %>
                <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-success' %>
                <%= link_to 'Delete', product_path(product), method: :delete, class: 'btn btn-danger' %>
              </div>
                <% running_total = running_total +(product.price * product.quantity ) %>
            </td>
          
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>

    <div class="btn-group">
        <%= link_to 'Add Product', new_product_path, class: 'btn btn-success' %>
      </div>
    <br>
    <h4 class="pull-right">Product Total:<%= number_to_currency(running_total) %></h4>
  </div>
</div>